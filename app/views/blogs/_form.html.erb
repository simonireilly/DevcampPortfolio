<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="form-group col-8">
      <%= form.text_field :title, id: :blog_title, class: 'form-control', placeholder: 'Title' %>
    </div>
    <div class="form-group col-4">
      <%= form.fields_for :topic do |f| %>

        <%= f.text_field :title, class: 'form-control',
                         placeholder: 'Topic' %>

      <% end %>

    </div>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: 10, placeholder: 'Content'%>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <select class="form-control" id="blog_status" name="blog[status]">
      <%= options_for_select(Blog.statuses.keys) %>
    </select>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>


<% end %>
