<%= @portfolio_item.inspect %>
<%= @portfolio_item.technologies.inspect %>
<%= form_with(model: portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_item_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_item_title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :portfolio_item_body, class: 'form-control', rows: 13 %>
      </div>
    </div>
    <div class="col-md-12">
      <hr/>
      <h2>Technologies used:</h2>
      <div>
        <%= form.fields_for :technologies, @portfolio_item.technologies do |technology_form| %>
          <div class="form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>

      <div class="actions">
        <%= form.submit 'Save portfolio item', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>