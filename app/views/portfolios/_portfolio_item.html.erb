<h3><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h3>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
<p><%= link_to 'Edit', edit_portfolio_path(portfolio_item)if logged_in?(:site_admin) %></p>
<p><%= link_to 'Delete portfolio item', portfolio_path(portfolio_item), method: :delete, data:{confirm: 'Are you sure?'} if logged_in?(:site_admin) %></p>